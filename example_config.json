{
  "target_url": "https://example.com",
  
  "depth_settings": {
    "max_depth": 5,
    "deep_crawling": true,
    "scheduling_algorithm": "BFS"
  },
  
  "strategy_settings": {
    "enable_static_crawler": true,
    "enable_dynamic_crawler": true,
    "enable_js_analysis": true,
    "enable_api_inference": true,
    "domain_scope": "example.com",
    "use_priority_queue": false,
    "enable_common_path_scan": true
  },
  
  "anti_detection_settings": {
    "request_delay": 500000000,
    "user_agents": [
      "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
    ],
    "proxies": [],
    "enable_form_auto_fill": true
  },
  
  "deduplication_settings": {
    "similarity_threshold": 0.85,
    "enable_dom_deduplication": true,
    "enable_url_pattern_recognition": true,
    "enable_smart_param_dedup": true,
    "max_param_value_variants_per_group": 3,
    "enable_business_aware_filter": true,
    "business_filter_min_score": 30.0,
    "business_filter_high_value_threshold": 70.0,
    "business_filter_max_low_value": 2,
    "business_filter_max_mid_value": 5,
    "business_filter_max_high_value": 20,
    "business_filter_adaptive_learning": true
  },
  
  "log_settings": {
    "level": "INFO",
    "output_file": "",
    "format": "json",
    "show_metrics": false
  },
  
  "_comment_v2.9": "=== v2.9 新增功能配置 ===",
  
  "output_settings": {
    "_comment": "JSON输出格式配置（学习Katana）",
    "format": "json",
    "output_file": "results.jsonl",
    "json_mode": "line",
    "include_all": true,
    "verbose": true
  },
  
  "rate_limit_settings": {
    "_comment": "速率控制配置（学习Katana）",
    "enabled": true,
    "requests_per_second": 50,
    "burst_size": 10,
    "min_delay": 100,
    "max_delay": 1000,
    "adaptive": true,
    "adaptive_min_rate": 10,
    "adaptive_max_rate": 100
  },
  
  "external_source_settings": {
    "_comment": "外部数据源配置（学习Gospider）",
    "enabled": true,
    "enable_wayback_machine": true,
    "enable_virustotal": false,
    "virustotal_api_key": "YOUR_API_KEY_HERE",
    "enable_common_crawl": false,
    "max_results_per_source": 1000,
    "timeout": 30
  },
  
  "scope_settings": {
    "_comment": "Scope精细控制配置（学习Katana）",
    "enabled": true,
    "include_domains": [
      "*.example.com"
    ],
    "exclude_domains": [
      "cdn.example.com"
    ],
    "include_paths": [
      "/api/*",
      "/admin/*"
    ],
    "exclude_paths": [
      "/*.jpg",
      "/*.png",
      "/*.css",
      "/*.js"
    ],
    "include_regex": "",
    "exclude_regex": "",
    "include_extensions": [
      "php",
      "jsp",
      "aspx",
      "do",
      "action"
    ],
    "exclude_extensions": [
      "jpg",
      "jpeg",
      "png",
      "gif",
      "css",
      "js"
    ],
    "allow_subdomains": true,
    "stay_in_domain": true,
    "allow_http": true,
    "allow_https": true
  },
  
  "pipeline_settings": {
    "_comment": "管道模式配置（学习Hakrawler/Crawley）",
    "enabled": false,
    "enable_stdin": true,
    "enable_stdout": true,
    "input_format": "text",
    "output_format": "jsonl",
    "quiet": false
  },
  
  "sensitive_detection_settings": {
    "_comment": "v2.11 敏感信息检测配置 - 支持云存储密钥、第三方授权、账号密码检测",
    "enabled": true,
    "scan_response_body": true,
    "scan_response_headers": true,
    "min_severity": "LOW",
    "enable_custom_patterns": false,
    "custom_patterns": [],
    "save_full_value": false,
    "output_file": "",
    "realtime_output": true,
    "exclude_url_patterns": []
  }
}

