{
  "_comment": "API发现模式 - 专注发现和分析API接口",
  "_scenario": "适用场景：API测试、接口文档生成、后端接口发现",
  
  "target_url": "",
  
  "blacklist_settings": {
    "enabled": true,
    "domains": ["*.gov.cn", "*.edu.cn", "*.mil.cn"],
    "strict_mode": true
  },
  
  "scope_settings": {
    "enabled": true,
    "include_paths": [
      "/api/*",
      "/v1/*",
      "/v2/*",
      "/rest/*",
      "/graphql",
      "/swagger/*",
      "/openapi/*"
    ],
    "exclude_extensions": ["jpg", "png", "gif", "css", "js", "woff", "mp4", "pdf", "zip", "html", "htm"],
    "include_extensions": ["json", "xml", "php", "jsp", "aspx", "do"],
    "allow_subdomains": true,
    "stay_in_domain": true
  },
  
  "depth_settings": {
    "max_depth": 6,
    "max_pages": 2000,
    "scheduling_algorithm": "BFS"
  },
  
  "strategy_settings": {
    "enable_static_crawler": true,
    "enable_dynamic_crawler": true,
    "enable_js_analysis": true,
    "enable_api_inference": true,
    "enable_common_path_scan": true
  },
  
  "anti_detection_settings": {
    "request_delay": 300000000,
    "timeout": 30,
    "retry_times": 3
  },
  
  "deduplication_settings": {
    "similarity_threshold": 0.80,
    "enable_dom_deduplication": false,
    "enable_url_pattern_recognition": true,
    "enable_smart_param_dedup": true,
    "max_param_value_variants_per_group": 5,
    "enable_business_aware_filter": true,
    "business_filter_min_score": 50.0,
    "business_filter_max_low_value": 1,
    "business_filter_max_mid_value": 5,
    "business_filter_max_high_value": 50
  },
  
  "rate_limit_settings": {
    "enabled": true,
    "requests_per_second": 20,
    "adaptive": true
  },
  
  "external_source_settings": {
    "enabled": true,
    "enable_wayback_machine": true,
    "max_results_per_source": 1000
  },
  
  "sensitive_detection_settings": {
    "enabled": true,
    "min_severity": "MEDIUM",
    "rules_file": "./sensitive_rules_config.json"
  },
  
  "output_settings": {
    "format": "json",
    "json_mode": "pretty",
    "include_all": true,
    "verbose": true
  },
  
  "log_settings": {
    "level": "INFO",
    "show_metrics": true
  }
}

