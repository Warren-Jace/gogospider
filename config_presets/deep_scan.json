{
  "_comment": "深度扫描模式 - 全面爬取，发现所有可能的URL",
  "_scenario": "适用场景：安全测试、全面审计、API发现、漏洞挖掘",
  
  "target_url": "",
  
  "blacklist_settings": {
    "enabled": true,
    "domains": ["*.gov.cn", "*.edu.cn", "*.mil.cn", "*.gov", "*.edu", "*.mil"],
    "domain_patterns": ["*bank*", "*payment*", "*police*", "*court*"],
    "strict_mode": true
  },
  
  "scope_settings": {
    "enabled": true,
    "exclude_extensions": ["jpg", "png", "gif", "svg", "ico", "woff", "mp4", "mp3", "pdf", "zip"],
    "allow_subdomains": true,
    "stay_in_domain": true,
    "max_url_length": 4096
  },
  
  "depth_settings": {
    "max_depth": 8,
    "deep_crawling": true,
    "max_pages": 5000,
    "scheduling_algorithm": "BFS"
  },
  
  "strategy_settings": {
    "enable_static_crawler": true,
    "enable_dynamic_crawler": true,
    "enable_js_analysis": true,
    "enable_api_inference": true,
    "enable_common_path_scan": true
  },
  
  "anti_detection_settings": {
    "request_delay": 500000000,
    "random_delay": true,
    "random_delay_range": [300000000, 800000000],
    "timeout": 30,
    "retry_times": 3,
    "enable_form_auto_fill": true
  },
  
  "deduplication_settings": {
    "similarity_threshold": 0.85,
    "enable_dom_deduplication": true,
    "enable_url_pattern_recognition": true,
    "enable_smart_param_dedup": true,
    "max_param_value_variants_per_group": 5,
    "enable_business_aware_filter": true,
    "business_filter_min_score": 20.0,
    "business_filter_max_low_value": 3,
    "business_filter_max_mid_value": 8,
    "business_filter_max_high_value": 30,
    "enable_param_validation": true
  },
  
  "rate_limit_settings": {
    "enabled": true,
    "requests_per_second": 30,
    "adaptive": true,
    "adaptive_min_rate": 10,
    "adaptive_max_rate": 50
  },
  
  "external_source_settings": {
    "enabled": true,
    "enable_wayback_machine": true,
    "enable_virustotal": false,
    "enable_common_crawl": false,
    "max_results_per_source": 2000
  },
  
  "sensitive_detection_settings": {
    "enabled": true,
    "scan_response_body": true,
    "scan_response_headers": true,
    "min_severity": "LOW",
    "realtime_output": true,
    "rules_file": "./sensitive_rules_config.json"
  },
  
  "output_settings": {
    "format": "json",
    "json_mode": "line",
    "include_all": true,
    "verbose": true
  },
  
  "log_settings": {
    "level": "INFO",
    "show_metrics": true
  }
}

