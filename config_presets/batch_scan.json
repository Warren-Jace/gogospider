{
  "_comment": "批量扫描模式 - 适合扫描多个目标",
  "_scenario": "适用场景：多目标扫描、资产发现、批量测试",
  
  "target_url": "",
  
  "batch_scan_settings": {
    "enabled": true,
    "input_file": "targets.txt",
    "concurrency": 5,
    "output_dir": "./batch_results",
    "per_target_timeout": 1800,
    "continue_on_error": true,
    "save_individual_reports": true,
    "save_summary_report": true
  },
  
  "blacklist_settings": {
    "enabled": true,
    "domains": [
      "*.gov.cn",
      "*.edu.cn", 
      "*.mil.cn",
      "*.gov",
      "*.edu",
      "*.mil"
    ],
    "domain_patterns": ["*bank*", "*payment*", "*admin.gov*", "*police*", "*court*"],
    "strict_mode": true
  },
  
  "scope_settings": {
    "enabled": true,
    "exclude_extensions": ["jpg", "png", "gif", "css", "js", "woff", "mp4", "pdf", "zip"],
    "allow_subdomains": false,
    "stay_in_domain": true
  },
  
  "depth_settings": {
    "max_depth": 4,
    "max_pages": 500,
    "scheduling_algorithm": "BFS"
  },
  
  "strategy_settings": {
    "enable_static_crawler": true,
    "enable_dynamic_crawler": false,
    "enable_js_analysis": true,
    "enable_api_inference": true,
    "enable_common_path_scan": false
  },
  
  "anti_detection_settings": {
    "request_delay": 500000000,
    "random_delay": true,
    "timeout": 20,
    "retry_times": 2
  },
  
  "deduplication_settings": {
    "similarity_threshold": 0.88,
    "enable_dom_deduplication": true,
    "enable_smart_param_dedup": true,
    "max_param_value_variants_per_group": 3,
    "enable_business_aware_filter": true,
    "business_filter_max_low_value": 2,
    "business_filter_max_mid_value": 5,
    "business_filter_max_high_value": 15
  },
  
  "rate_limit_settings": {
    "enabled": true,
    "requests_per_second": 30,
    "adaptive": true
  },
  
  "sensitive_detection_settings": {
    "enabled": true,
    "min_severity": "MEDIUM",
    "rules_file": "./sensitive_rules_config.json"
  },
  
  "output_settings": {
    "format": "json",
    "json_mode": "line",
    "verbose": false
  },
  
  "log_settings": {
    "level": "WARN",
    "show_metrics": false
  }
}

